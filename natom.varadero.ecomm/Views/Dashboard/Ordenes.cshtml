@using natom.varadero.entities
<link href="/Resources/css/varadero/dashboard/principal.ui.css" rel="stylesheet" type="text/css">
<link href="/Resources/css/varadero/dashboard/principal.responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)">
@{ 
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style type="text/css">
    .bolded {
        font-weight: bold;
    }
    .right-align {
        text-align:right;
    }
    td.center {
        text-align:center;
    }
</style>
<!-- ========================= SECTION MAIN ========================= -->
<section class="section-main bg padding-top-sm">
    <div class="container">

        <div class="row row-sm">
            <aside class="col-md-3">
                <div class="card">
                    <ul class="menu-category">
                        <li class="active"> <a href="/Dashboard/Ordenes">Ordenes</a></li>
                        <li> <a href="/Dashboard/Destacados">Productos destacados</a></li>
                    </ul>
                </div> <!-- card.// -->
            </aside> <!-- col.// -->
            <div class="col-md-9">
                <table class="table table-striped table-bordered dt-responsive nowrap" id="tblIndex" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Orden</th>
                            <th>Fecha</th>
                            <th>Monto total</th>
                            <th>Estado</th>
                            <th>Ult. actualización</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- col./
            / -->
            <!-- card.// -->
        </div>

        <br />
        <br />

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->
<script type="text/javascript">
    $(document).ready(function () {
        var oTable = $('#tblIndex').DataTable({
            "responsive": true,
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "/Dashboard/GetOrdenesTableData",
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "scrollY": "305px",
            "aaSorting": [[0, "desc"]],
            "bDeferRender": true,
            "aoColumns": [
                { "bSortable": true, "sWidth": '15%', "sClass": "bolded" },
                { "bSortable": true, "sWidth": '8%' },
                { "bSortable": true, "sWidth": '12%', "sClass": "right-align" },
                { "bSortable": false, "sWidth": '30%', "sClass": "bolded center" },
                { "bSortable": false, "sWidth": '12%' },
                {
                    "bSortable": false,
                    "bSearchable": false,
                    "sWidth": '23%',
                    "mRender": function (data, type, full) {
                        var html = "";
                        html += '&nbsp;<a class="btn btn-secondary btn-sm history-smt-btn" id="' + data + '"><i class="fa fa-history" aria-hidden="true"></i></a>';

                        return html;
                    }
                }
            ]
        });

        new $.fn.dataTable.FixedHeader(oTable);

        $('#tblIndex').on('click', '.edit-smt-btn', function (e) {
            var id = e.currentTarget.id;
            var url = urlEdit + "?id=" + encodeURIComponent(id);
            location.href = url;
        });
    });
</script>