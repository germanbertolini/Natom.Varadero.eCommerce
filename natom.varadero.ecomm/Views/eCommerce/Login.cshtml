@model natom.varadero.ecomm.Models.ViewModels.LoginView
@{
    ViewBag.Title = "Identificarse";
}

<!DOCTYPE html>
<html>
<head>
    <title>e-Varadero | @ViewBag.Title</title>
    <script src="/Resources/js/jquery-2.0.0.min.js" type="text/javascript"></script>
    <script src="/Resources/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="/Resources/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="/Resources/css/fontawesome-all.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/Resources/css/custom.login.css">
    <link rel="stylesheet" type="text/css" href="/Resources/css/custom.login.mobile.css">
</head>
<body>
    <header class="section-header">

        <section class="header-main shadow-sm">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-sm-3">
                        <div class="brand-wrap">
                            <img class="logo" src="/Resources/img/logo.png">
                        </div> <!-- brand-wrap.// -->
                    </div>
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->
    </header>
    <div class="container" style="padding-top:2rem">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Ingresar</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "eCommerce", FormMethod.Post))
                    {
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", @placeholder = "Usuario", @required = "required", @autofocus = "autofocus", @maxlength = "50" })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.PasswordFor(m => m.Clave, new { @class = "form-control", @placeholder = "Clave", @required = "required" })
                        </div>

                        <center><i style="color:#FF1515; font-weight:bold;">@ViewBag.ErrorMessage</i></center>
                        
                        <div class="form-group">
                            <input type="submit" value="Acceder" class="btn float-right login_btn">
                        </div>
                    }
                </div>
                <!-- <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?<a href="#">Sign Up</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div> -->
            </div>
        </div>
    </div>
</body>
</html>